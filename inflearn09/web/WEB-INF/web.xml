<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<servlet>
		<servlet-name>waf</servlet-name>
		<servlet-class>com.code5.fw.web.MasterController
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>waf</servlet-name>
		<url-pattern>/waf/*</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>multipart</servlet-name>
		<servlet-class>com.code5.fw.web.MasterControllerMultipart
		</servlet-class>
		<multipart-config>
			<max-file-size>10240000</max-file-size>
			<max-request-size>10240000</max-request-size>
			<file-size-threshold>10240</file-size-threshold>
		</multipart-config>
	</servlet>

	<servlet-mapping>
		<servlet-name>multipart</servlet-name>
		<url-pattern>/multipart/*</url-pattern>
	</servlet-mapping>

	<display-name>thymeleafexamples-gtvg</display-name>

	<filter>
		<filter-name>gtvgfilter</filter-name>
		<filter-class>thymeleafexamples.gtvg.web.filter.GTVGFilter
		</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>gtvgfilter</filter-name>
		<url-pattern>/gtvgfilter/*</url-pattern>
	</filter-mapping>

</web-app>
